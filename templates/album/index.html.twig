{% extends "base.html.twig" %}

{% block title "Les albums" %}

{% block body %}
<div class="container mt-4">
    <div class="jumbotron">
        <div class="row flex">

            {% for album in albums %}
            <div class="col-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src="https://i.imgur.com/dk9hlMd.png" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text text-center"><a href="{{ path('album.show', {ref: album.album_ref, slug: album.slug}) }}">{{ album.album_titre }}</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
            
        </div>
    </div>    
</div>
{% endblock %}