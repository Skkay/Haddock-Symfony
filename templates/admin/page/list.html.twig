{% extends "admin/base.html.twig" %}

{% block title "Administration - Page" %}

{% block page_title "Administration - Page" %}

{% block buttons_area %}
<a href="{{ path('admin.page.create') }}" class="btn btn-outline-primary" role="button">Ajouter une page</a>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table table-hover table-sm table-striped" id="table_pages">
        <thead>
            <tr>
                <th class="text-center">Référence de l'album</th>
                <th class="text-center">Numéro de page</th>
                <th class="text-center" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
            <tr>
                <td class="text-center">{{page.refAlbum}}</td>
                <td class="text-center">{{page.num}}</td>
                <td class="text-center"><a class="text-success" href="{{ path('admin.page.edit', {ref: page.refAlbum, num: page.num}) }}">Modifier</a></td>
                <td class="text-center"><a class="text-danger" href="{{ path('admin.page.delete', {ref: page.refAlbum, num: page.num}) }}">Supprimer</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}

{% endblock %}

