<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">

				<a class="navbar-brand" href="{{ path('home') }}">
					<img src="https://i.imgur.com/gTNoFUo.png" width="255" height="89" alt="">
				</a>

				<!-- Button in mobile view -->
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Accueil</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('album.index') }}">Albums</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('jurons.index') }}">Les jurons</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('jeux.index') }}">Les jeux</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('admin.home') }}">Administration</a></li>
						{% if app.user %}<li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">Deconnexion</a></li>{% endif %}
					</ul>
				</div>

			</div>			
		</nav>
		
		{% block body %}

		{% endblock %}

		
		<script src="{{ asset('js/jquery-3.4.1.slim.min.js') }}"></script>
		<script src="{{ asset('js/popper.min.js') }}"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
		{% block javascripts %}{% endblock %}
</body>
</html>
